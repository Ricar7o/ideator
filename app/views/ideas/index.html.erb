<h1>Listing ideas</h1>
<h2><%= link_to 'New Idea', new_idea_path %></h2>
<% @ideas.each do |idea| %>
  <div>
    <div><%= idea.name %></div>
    <div><%= image_tag(idea.picture_url) if idea.picture.present? %></div>
    <div><%= idea.description %></div>
    <div><%= link_to 'Show', idea %> | <%= link_to 'Edit', edit_idea_path(idea) %> | <%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' } %></div>
  </div>
<% end %>